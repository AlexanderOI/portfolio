---
import { SkillsLanguagesIcons } from "../data/skillsIcons";
import Card from "./ui/card.astro";
---

<div class="mb-20">
  <h2 class="text-center text-3xl font-bold mb-6">Habilidades</h2>

  <div class="flex justify-center flex-wrap gap-2 mt-2 max-w-[36rem] m-auto">
    {
      SkillsLanguagesIcons.map(({ Icon, name }) => (
        <div class="flex items-center bg-dark-gray relative overflow-hidden p-2 rounded-md">
          <i class="flex w-5 h-5 mr-2">
            <Icon />
          </i>

          <p class="text-xs">{name}</p>
        </div>
      ))
    }
  </div>
</div>
