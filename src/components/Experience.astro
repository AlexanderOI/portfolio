---
import { experiences } from "@/data/experience";
import CalendarIcon from "@/icons/common/CalendarIcon.astro";
import Card from "@/components/ui/Card.astro";
import TitleGradient from "@/components/ui/TitleGradient.astro";
---

<div class="mb-20">
  <div class="w-full max-w-4xl mx-auto">
    <TitleGradient>Expeciencia</TitleGradient>

    <div class="space-y-8 relative">
      <!-- <div class="absolute h-full w-2 bg-dark-gray left-5 rounded-3xl"></div> -->

      {
        experiences.map((exp) => (
          <Card class="w-full flex gap-x-5" border={false}>
            <div class="flex-shrink-0 w-12 h-12 bg-gray-800 rounded-full flex items-center justify-center z-50">
              <img src={exp.companyLogo} alt={exp.companyName} class="w-8 h-8 " />
            </div>

            <div>
              <div class="flex items-center space-x-2 mb-2">
                <CalendarIcon class="w-4 h-4 " />
                <span class="text-sm ">
                  {exp.startDate} - {exp.endDate}
                </span>
              </div>
              <h3 class="text-xl font-semibold mb-2">{exp.companyName}</h3>
              <ul class="list-disc list-inside space-y-2">
                {exp.responsibilities.map((resp) => (
                  <li>{resp}</li>
                ))}
              </ul>
            </div>
          </Card>
        ))
      }
    </div>
  </div>
</div>

