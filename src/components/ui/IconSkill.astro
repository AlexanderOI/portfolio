---
interface Props {
  name: string;
  Icon: any;
  iconSize?: string;
  textSize?: string;
}

const { name, Icon, iconSize, textSize } = Astro.props;
---

<div class="flex items-center bg-dark-gray relative overflow-hidden p-2 rounded-md">
  <i class={`flex ${iconSize || "w-4 h-4"} mr-2`}>
    <Icon />
  </i>

  <p class={`text-${textSize}`}>{name}</p>
</div>
