---
// src/components/Project.astro
import { project as a } from "./projects";

let project = a[0];
---

<div>
  <div>
    <a href="/">← Volver</a>
    <a href={project.githubLink} target="_blank">Ver proyecto en GitHub</a>
  </div>

  <div>
    <h2>{project.name}</h2>
    <p>{project.description}</p>

    <h4>Tecnologías utilizadas</h4>
    <ul>
      {project.technologies.map((tech) => <li>{tech}</li>)}
    </ul>

    <h4>Características</h4>
    {
      project.features.map((feature) => (
        <p>
          <b>{feature.split(":")[0]}:</b> {feature.split(":")[1]}
        </p>
      ))
    }

    <section>
      <h4>Galería</h4>
      <div>
        {project.images.map((img, index) => <img src={img.src} alt={img.alt} />)}
      </div>
    </section>
  </div>
</div>
